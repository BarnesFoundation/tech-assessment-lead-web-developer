{
	"name": "ticket-order-api",
	"version": "1.0.0",
	"description": "A mock-up API for placing orders for a given event",
	"main": "index.js",
	"scripts": {
		"build-server": "tsc -p server/",
		"watch-and-compile-dev-server": "tsc -w -p src/",
